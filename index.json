{
  "projectName": "Juju",
  "description": "A time tracking application built with Swift and SwiftUI",
  "fileStructure": {
    "Juju": {
      "App": {
        "AppDelegate.swift": {
          "purpose": "App lifecycle, menus, windows, launch setup.",
          "responsibilities": [
            "Handles app lifecycle, menus, windows, launch setup."
          ],
          "dependsOn": [
            "Cocoa",
            "WebKit",
            "Core/Managers",
            "Core/Models/Project",
            "App/IconManager",
            "Features/Dashboard/DashboardWindowController",
            "Features/Dashboard/DashboardWebViewController"
          ]
        },
        "main.swift": {
          "purpose": "macOS app entry point.",
          "responsibilities": [
            "Kicks off the SwiftUI/AppKit app delegate."
          ],
          "dependsOn": [
            "AppDelegate.swift"
          ]
        },
        "JujuUtils.swift": {
          "purpose": "General utility functions.",
          "responsibilities": [
            "NSColor-Hex conversion, ClosureSleeve."
          ],
          "dependsOn": [
            "Cocoa"
          ]
        }
      },
      "Core": {
        "Models": {
          "Project.swift": {
            "purpose": "Project data model.",
            "responsibilities": [
              "Defines the Project struct (name, sessions, etc.)."
            ],
            "dependsOn": [
              "Foundation"
            ]
          },
          "ChartModels.swift": {
            "purpose": "Data types for charts.",
            "responsibilities": [
              "Sessions over time, activity per project, etc."
            ],
            "dependsOn": []
          }
        },
        "ViewModels": {
          "ProjectsViewModel.swift": {
            "purpose": "Manages project list state.",
            "responsibilities": [
              "CRUD operations, filtering, etc."
            ],
            "dependsOn": [
              "Core/Managers/ProjectManager",
              "Core/Models/Project"
            ]
          }
        },
        "Managers": {
          "SessionManager.swift": {
            "purpose": "Handles logging deep work sessions.",
            "responsibilities": [
              "Logging, saving, retrieving sessions."
            ],
            "dependsOn": []
          },
          "MenuManager.swift": {
            "purpose": "Builds/updates macOS status bar menu.",
            "responsibilities": [
              "Builds and updates the app menu."
            ],
            "dependsOn": [
              "App/AppDelegate",
              "Core/Models/Project",
              "Core/Managers/SessionManager",
              "Features/Notes/NotesModalWindowController"
            ]
          },
          "ShortcutManager.swift": {
            "purpose": "Registers global keyboard shortcuts.",
            "responsibilities": [
              "Listens for shortcuts."
            ],
            "dependsOn": [
              "App/AppDelegate.swift"
            ]
          },
          "IconManager.swift": {
            "purpose": "Loads/manages icons.",
            "responsibilities": [
              "Active/idle/etc."
            ],
            "dependsOn": [
              "Cocoa"
            ]
          },
          "ChartDataPreparer.swift": {
            "purpose": "Transforms data for charts.",
            "responsibilities": [
              "Session/project data to chart-friendly datasets."
            ],
            "dependsOn": []
          }
        }
      },
      "Features": {
        "Dashboard": {
          "ChartViews.swift": {
            "purpose": "Swift Charts definitions.",
            "responsibilities": [
              "Everything for bar, area, and pie charts."
            ],
            "dependsOn": []
          },
          "DashboardNativeSwiftChartsView.swift": {
            "purpose": "Displays Swift Charts.",
            "responsibilities": [
              "Connected to ChartDataPreparer."
            ],
            "dependsOn": [
              "Core/Managers/ChartDataPreparer",
              "Features/Dashboard/ChartViews"
            ]
          },
          "SwiftUIDashboardRootView.swift": {
            "purpose": "Main SwiftUI dashboard container.",
            "responsibilities": [
              "Tabs, layout, etc."
            ],
            "dependsOn": [
              "Features/Dashboard/WebDashboardView",
              "SwiftUI"
            ]
          },
          "DashboardWindowController.swift": {
            "purpose": "Manages dashboard window lifecycle.",
            "responsibilities": [
              "Open/close, focus."
            ],
            "dependsOn": [
              "SwiftUI",
              "Features/Dashboard/SwiftUIDashboardRootView",
              "App/AppDelegate"
            ]
          }
        },
        "Projects": {
          "NativeView.swift": {
            "purpose": "SwiftUI project list/grid",
            "responsibilities": [
              "Displays a list or grid of projects"
            ],
            "dependsOn": [
              "Core/ViewModels/ProjectsViewModel"
            ]
          },
          "ProjectGridItemView.swift": {
            "purpose": "Individual project tile",
            "responsibilities": [
              "UI for one project"
            ],
            "dependsOn": []
          },
          "ProjectDetailView.swift": {
            "purpose": "Detail page for a project",
            "responsibilities": [
              "Shows details"
            ],
            "dependsOn": []
          },
          "AddProjectView.swift": {
            "purpose": "Form for creating a new project",
            "responsibilities": [
              "Input fields for new project details"
            ],
            "dependsOn": []
          }
        },
        "Sessions": {
          "SessionsView.swift": {
            "purpose": "Displays recorded sessions.",
            "responsibilities": [
              "Shows all sessions."
            ],
            "dependsOn": []
          },
          "SessionCardView.swift": {
            "purpose": "One session's summary.",
            "responsibilities": [
              "Duration, notes, etc."
            ],
            "dependsOn": []
          },
          "EditSessionView.swift": {
            "purpose": "Form for editing a session.",
            "responsibilities": [
              "Input for editing sessions."
            ],
            "dependsOn": []
          }
        },
        "Notes": {
          "NotesManager.swift": {
            "purpose": "Manages session notes persistence.",
            "responsibilities": [
              "Saving, loading, and potentially syncing notes."
            ],
            "dependsOn": []
          },
          "NotesModalView.swift": {
            "purpose": "SwiftUI view for notes input modal.",
            "responsibilities": [
              "Presents text area for notes entry.",
              "Handles mood rating UI."
            ],
            "dependsOn": [
              "Features/Notes/NotesViewModel"
            ]
          },
          "NotesModalViewController.swift": {
            "purpose": "Controls the notes input modal.",
            "responsibilities": [
              "Presents the NotesModalView.",
              "Handles saving/canceling notes."
            ],
            "dependsOn": [
              "Features/Notes/NotesModalView",
              "Features/Notes/NotesViewModel",
              "Features/Notes/NotesManager"
            ]
          },
          "NotesViewModel.swift": {
            "purpose": "Data and logic for notes input.",
            "responsibilities": [
              "Manages notes text, mood rating, etc.",
              "Communicates with NotesManager."
            ],
            "dependsOn": [
              "Features/Notes/NotesManager"
            ]
          },
          "README.md": {
            "purpose": "Documentation for the Notes feature.",
            "responsibilities": [
              "Explains the feature's architecture and usage."
            ],
            "dependsOn": []
          },
          "NotesModalWindowController.swift": {
            "purpose": "Window controller",
            "responsibilities": [
              "Popup window"
            ],
            "dependsOn": [
              "Features/Notes/NotesModalViewController"
            ]
          }
        }
      },
      "Resources": {
        "Assets.xcassets": {
          "purpose": "App icons, colours, image sets.",
          "responsibilities": [
            "Your app icons, accent colours, and image sets."
          ],
          "dependsOn": []
        }
      },
      "Shared": {
        "Extensions": {
          "description": "Swift/SwiftUI extensions",
          "purpose": "Generic helpers.",
          "responsibilities": [
            "e.g. .asDate(), .cornerRadius(), etc."
          ]
        }
      },
      "keyComponents": [
        "Dashboard",
        "Time Tracking",
        "Window Management"
      ],
      "technicalContext": {
        "framework": "SwiftUI and AppKit",
        "patterns": [
          "MVVM Architecture",
          "Window Controller Pattern"
        ]
      }
    },
    "Juju.xcodeproj": {
      "description": "Xcode project file containing build settings, targets, and references to source files.",
      "files": [
        "project.pbxproj",
        "project.xcworkspace"
      ]
    },
    "README.md": {
      "purpose": "Provides a high-level overview of the project, including setup instructions, usage guidelines, and contribution information."
    },
    "STATUS.md": {
      "purpose": "Documents the current status of the project and any known issues or limitations."
    },
    "design.md": {
      "purpose": "Contains design documentation, including UI mockups, architecture diagrams, and user flow descriptions."
    },
    "icons": {
      "description": "Directory containing various application icons.",
      "files": [
        "icon.png",
        "juju-icon.pdf",
        "status-active.png",
        "status-idle.png"
      ],
      "Old": {
        "files": [
          "icon-active_old.png",
          "icon-idle_old.png",
          "icon_old.png"
        ]
      }
    },
    "index.json": {
      "purpose": "Contains the file structure for AI analysis."
    }
  }
}
